<% if logged_in? %>

  <p>ユーザ: 
<%= current_user.name %>
</p>
<h1> リスト</h1>
<table>
    <thead>
        <tr>
            <th>リスト名</th>
        </tr>
    </thead>
    <tbody>
        <% @tasks.each do |task| %>
        <tr>
            <td><%= task.id %></td>
            <td>ステータス: </td>
            <td><%= task.status %></td>
            <td>　　　コンテンツ: </td>
            <td><%= task.content %></td>
            <td><%= link_to '詳細', task_path(task) %></td>
        </tr>
        <% end %>
    </tbody>
</table>

<%= link_to '追加', new_task_path %>

<% else %>

  <div class="center jumbotron">
    <div class="text-center">
      <h1>Welcome to the TODO LIST</h1>
      
<%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>

    </div>
  </div>
<% end %>

